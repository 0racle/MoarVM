MVM_JIT_TILE_DECL(cmp) {
    MVMint8 regl = values[1]->reg_num;
    MVMint8 regr = values[2]->reg_num;
    switch (values[0]->size) {
    case 1:
        | cmp Rb(regl), Rb(regr);
        break;
    case 2:
        | cmp Rw(regl), Rw(regr);
        break;
    case 4:
        | cmp Rd(regl), Rd(regr);
        break;
    case 8:
        | cmp Rq(regl), Rq(regr);
        break;
    }
}


