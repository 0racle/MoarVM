MVM_JIT_TILE_DECL(load_reg) {
    MVMint8 out  = values[0]->reg_num;
    MVMint8 base = values[1]->reg_num;
    MVMint32 size = args[0];
    switch (size) {
    case 1:
        | mov Rb(out), [Rq(base)];
        break;
    case 2:
        | mov Rw(out), [Rq(base)];
        break;
    case 4:
        | mov Rd(out), [Rq(base)];
        break;
    case 8:
        | mov Rq(out), [Rq(base)];
        break;
    default:
        MVM_oops(tc, "Unsupported load size: %d\n", args[0]);
    }
}

