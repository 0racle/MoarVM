#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build-arch:
	dh_testdir
	perl Configure.pl --prefix=/usr --optimize
	touch configure-stamp

binary-arch: configure-stamp
	dh_testdir
	$(MAKE)
	touch build-stamp

install: build-stamp
	dh_testdir
	DESTDIR=$(CURDIR)/debian/moarvm $(MAKE) install
	rm -f configure-stamp build-stamp


clean:
	dh_testdir
	git clean -Xdf

.PHONY: build
