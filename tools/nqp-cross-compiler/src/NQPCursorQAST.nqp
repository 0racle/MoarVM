    sub Cursor_parse() {
        block(
            localp('self'),
            localp('$target', :type(str) ),
        #    localpn('$actions', :named('actions') ),
            localpn('$rule', :default(vm('null')), :named('rule') ),
            localpn('$rulename', :type(str), :default(sval('TOP')), :named('rulename') ),
            # XXX set $*ACTIONS contextual
            op('bind',
                locald('$cur'),
                op('call',
                    vm('findmeth',
                        local('self'),
                        sval('!cursor_init') ),
                    local('self'),
                    local('$target') ) ),
            op('bind',
                locald('$result'),
                op('call',
                    op('if',
                        vm('iscoderef',
                            local('$rule') ),
                        local('$rule'),
                        vm('findmeth_s',
                            local('$cur'),
                            local('$rulename') ) ),
                    local('$cur') ) ),
            op('call',
                vm('findmeth',
                    local('$result'),
                    sval('MATCH') ),
                local('$result') ) )
    }
    
