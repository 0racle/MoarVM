    sub Cursor_cursor_next() {
        block(
            localp('self'),
            op('bind',
                locald('$cur_type'),
                vm('getwhat',
                    local('self') ) ),
            op('bind',
                locald('$restart'),
                attr('$!restart',
                    local('self'),
                    local('$cur_type') ) ),
            op('if',
                vm('isnull',
                    local('$restart') ),
                stmts(
                    op('bind',
                        locald('$cur'),
                        op('call',
                            vm('findmeth',
                                local('self'),
                                sval('!cursor_start') ),
                            local('self') ) ),
                    op('call',
                        vm('findmeth',
                            local('self'),
                            sval('!cursor_fail') ),
                        local('self') ),
                    local('$cur') ),
                op('call',
                    local('$restart'),
                    local('self') ) ) )
    }
    
    sub Cursor_cursor_more() {
